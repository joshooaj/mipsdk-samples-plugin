             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessageTester.MessageDataControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" x:Name="Header"></RowDefinition>
            <RowDefinition Height="*" x:Name="BottomSpace"/>
        </Grid.RowDefinitions>
 
        
        <TextBlock Grid.Row="0" Text="Example text" Margin="5,5,1,1" TextWrapping="Wrap" x:Name="_text"/>
    </Grid>
</local:MessageDataSuper>
